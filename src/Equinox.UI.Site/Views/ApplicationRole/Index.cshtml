@model IEnumerable<Equinox.Application.ViewModels.ApplicationRoleListViewModel>

@{
    ViewData["Title"] = "Roles Manage";
}
<section class="card">
    <div class="card-header">
        <div class="pull-left">
            @ViewData["Title"]
        </div>
        <div class="pull-right">
            <a id="createModal" data-toggle="modal" asp-action="AddEditApplicationRole" data-target="#modal-action" class="btn btn-primary btn-sm">
                <i class="glyphicon glyphicon-plus"></i>  Thêm
            </a>
        </div>
    </div>
    <div class="card-body">
        <table id="tblData" class="display table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Users</th>
                    <th width="25%">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.RoleName</td>
                        <td>@item.Description</td>
                        <td>@item.NumberOfUsers</td>
                        <td>
                            <div class="btn-group">
                                <a id="EditModal" data-toggle="modal" asp-action="AddEditApplicationRole" asp-route-id="@item.Id" data-target="#modal-action" class="btn btn-info btn-sm">
                                    Sửa
                                </a>
                                @if (item.NumberOfUsers == 0)
                                {
                                    <a id="DeleteModal" data-toggle="modal" asp-action="DeleteApplicationRole" asp-route-id="@item.Id" data-target="#modal-action" class="btn btn-danger btn-sm">
                                        Xóa
                                    </a>
                                }
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</section>
@section scripts
    {
    <script>
        $(function () {
            $('#tblData').DataTable();
        })
    </script>

}