@using Equinox.Application.ViewModels
<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewData["Title"]</title>

    <link href="~/lib/img/favicon.144x144.png" rel="apple-touch-icon" type="image/png" sizes="144x144">
    <link href="~/lib/img/favicon.114x114.png" rel="apple-touch-icon" type="image/png" sizes="114x114">
    <link href="~/lib/img/favicon.72x72.png" rel="apple-touch-icon" type="image/png" sizes="72x72">
    <link href="~/lib/img/favicon.57x57.png" rel="apple-touch-icon" type="image/png">
    <link href="~/lib/img/favicon.png" rel="icon" type="image/png">
    <link href="~/lib/img/favicon.ico" rel="shortcut icon">
    <link href="~/lib/datatables-net/datatables.min.css" rel="stylesheet" />
    <link href="~/lib/datatables-net/datatables-net.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/css/lib/font-awesome/font-awesome.min.css">
    <link rel="stylesheet" href="~/lib/css/lib/bootstrap/bootstrap.min.css">
    <link href="~/lib/loading/jquery.loading.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/css/main.css">
    <link href="~/lib/css/style.css" rel="stylesheet" />
</head>
<body class="with-side-menu control-panel control-panel-compact">
    <header class="site-header">
        <div class="container-fluid">
            <a href="#" class="site-logo">
                <img class="hidden-md-down" src="~/lib/img/logo-2.png" alt="">
                <img class="hidden-lg-down" src="~/lib/img/logo-2-mob.png" alt="">
            </a>

            <button id="show-hide-sidebar-toggle" class="show-hide-sidebar">
                <span>toggle menu</span>
            </button>

            <button class="hamburger hamburger--htla">
                <span>toggle menu</span>
            </button>
            <div class="site-header-content">
                <div class="site-header-content-in">
                    <div class="site-header-shown">
                        <div class="dropdown user-menu">
                            <button class="dropdown-toggle" id="dd-user-menu" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <img src="~/lib/img/avatar-2-64.png" alt="">
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dd-user-menu">
                                <a class="dropdown-item" href="#"><span class="font-icon glyphicon glyphicon-user"></span>Profile</a>
                                <a class="dropdown-item" href="#"><span class="font-icon glyphicon glyphicon-cog"></span>Settings</a>
                                <a class="dropdown-item" href="#"><span class="font-icon glyphicon glyphicon-question-sign"></span>Help</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#"><span class="font-icon glyphicon glyphicon-log-out"></span>Logout</a>
                            </div>
                        </div>

                        <button type="button" class="burger-right">
                            <i class="font-icon-menu-addl"></i>
                        </button>
                    </div><!--.site-header-shown-->

                    <div class="mobile-menu-right-overlay"></div>

                </div><!--site-header-content-in-->
            </div><!--.site-header-content-->
        </div><!--.container-fluid-->
    </header><!--.site-header-->

    <div class="mobile-menu-left-overlay"></div>
    <nav class="side-menu">
        <ul class="side-menu-list">
            <li class="blue-dirty">
                <a href="http://themesanytime.com/startui/demo/tables.html">
                    <span class="glyphicon glyphicon-th"></span>
                    <span class="lbl">Tables</span>
                </a>
            </li>
            <li class="magenta with-sub">
                <span>
                    <span class="glyphicon glyphicon-list-alt"></span>
                    <span class="lbl">Datatables</span>
                </span>
                <ul>
                    <li>
                        <a href="http://themesanytime.com/startui/demo/datatables-net.html"><span class="lbl">Datatables.net</span></a>
                    </li>
                    <li>
                        <a href="http://themesanytime.com/startui/demo/bootstrap-datatables.html"><span class="lbl">Bootstrap Table</span></a>
                    </li>
                </ul>
            </li>

            <!--<li><a href="datatables.html"><span class="lbl">Default</span></a></li>
            <li><a href="datatables-fixed-columns.html"><span class="lbl">Fixed Columns</span></a></li>
            <li><a href="datatables-reorder-rows.html"><span class="lbl">Reorder Rows</span></a></li>
            <li><a href="datatables-reorder-columns.html"><span class="lbl">Reorder Columns</span></a></li>
            <li><a href="datatables-resize-columns.html"><span class="lbl">Resize Columns</span></a></li>
            <li><a href="datatables-mobile.html"><span class="lbl">Mobile</span></a></li>
            <li><a href="datatables-filter-control.html"><span class="lbl">Filters</span></a></li>-->
        </ul>
    </nav><!--.side-menu-->

    <div class="page-content">
        <div class="container-fluid">
            @RenderBody()
        </div><!--.container-fluid-->
    </div><!--.page-content-->
    @Html.Partial("_Modal", new BootstrapModel { ID = "modal-action", AreaLabeledId = "modal-action-label", Size = ModalSize.Medium })
    <script src="~/lib/js/lib/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/lib/js/lib/popper/popper.min.js"></script>
    <script src="~/lib/js/lib/tether/tether.min.js"></script>
    <script src="~/lib/js/lib/jqueryui/jquery-ui.min.js"></script>
    <script src="~/lib/js/lib/bootstrap/bootstrap.min.js"></script>
    <script src="~/lib/js/lib/jquery.jscrollpane.min.js"></script>
    <script src="~/lib/datatables-net/datatables.min.js"></script>
    <script src="~/lib/loading/jquery.loading.min.js"></script>
    <script src="~/lib/js/lib/notie/notie.js"></script>
    <script src="~/lib/js/lib/notie/notie-init.js"></script>
    <script src="~/lib/js/lib/bootstrap-notify/bootstrap-notify.min.js"></script>
    <script src="~/lib/js/lib/bootstrap-notify/bootstrap-notify-init.js"></script>
    <script src="~/lib/js/app.js"></script>
    <script src="~/lib/js/site.js"></script>
    <script>
        $(document).bind("ajaxStart.mine", function () {
            sys.Loading();
        });

        $(document).bind("ajaxStop.mine", function () {
            sys.HideLoading();
        });
        (function ($) {
            function InitModal() {
                var $this = this;

                function initilizeModel() {
                    $("#modal-action").on('loaded.bs.modal', function (e) {

                    }).on('hidden.bs.modal', function (e) {
                        $(this).removeData('bs.modal');
                    });
                }
                $this.init = function () {
                    initilizeModel();
                }
            }
            $(function () {
                var self = new InitModal();
                self.init();
            })
        }(jQuery))

    </script>

    @RenderSection("scripts", required: false)

</body>
</html>